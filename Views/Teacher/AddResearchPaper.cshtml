@using ResultManagement.Models
@model Thesis

@{
    ViewBag.Title = "AddResearchPaper";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    TeacherInfo teacher = ViewBag.teacher;
    string message = ViewBag.Message;
}

@using (Html.BeginForm("AddResearchPaper", "Teacher", FormMethod.Post))
{
    <fieldset>
        @Html.AntiForgeryToken()

        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 br">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="@Url.Content(teacher.ImagePath)">
                        <span>@teacher.Teacher_Name</span>
                        <span class="text-black-50">@teacher.Teacher_Email</span>
                        <span class="text-black-50">@teacher.Teacher_Contact</span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Update your Password</h4>
                        </div>
                        <table class="table table-borderless table-responsive d-block">
                            <tbody>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Thesis_Title)</td>
                                    <td>@Html.TextBoxFor(model => model.Thesis_Title)</td>
                                    <td>@Html.ValidationMessageFor(model => model.Thesis_Title)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Thesis_Description)</td>
                                    <td>@Html.TextAreaFor(model => model.Thesis_Description)</td>
                                    <td>@Html.ValidationMessageFor(model => model.Thesis_Description)</td>
                                </tr>

                                <tr>
                                    <td colspan="2" class="text-center"><input type="submit" value="Save" class="btn btn-outline-secondary btn_page" /></td>
                                    @Html.HiddenFor(model => model.Teacher_Id)
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-center">@Html.ValidationSummary(true, @message, new { @class = "text-danger" })</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}

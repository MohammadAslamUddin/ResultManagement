@using ResultManagement.Models
@model ResultManagement.Models.UpdateImage

@{
    ViewBag.Title = "UpdateImage";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    TeacherInfo teacher = ViewBag.teacher;
    string message = ViewBag.Message;
}


@using (Html.BeginForm("UpdateImage", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        @Html.AntiForgeryToken()

        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 br">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="@Url.Content(teacher.ImagePath)">
                        <span>@teacher.Teacher_Name</span>
                        <span class="text-black-50">@teacher.Teacher_Email</span>
                        <span class="text-black-50">@teacher.Teacher_Contact</span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Update your Image</h4>
                        </div>
                        <table class="table table-borderless d-grid">
                            <tbody>
                                <tr>
                                    <td>@Html.LabelFor(model => model.ImagePath)</td>
                                    <td><input type="file" name="ImageFile" id="ImageFile" required /></td>
                                    <td>@Html.ValidationMessageFor(model => model.ImagePath)</td>
                                </tr>
                                <tr class="text-center">
                                    <td colspan="2"><input type="submit" value="Update Image" class="btn btn-outline-secondary btn_page" /></td>
                                    @Html.HiddenFor(model => model.Id)
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-center"><label>@message</label></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}

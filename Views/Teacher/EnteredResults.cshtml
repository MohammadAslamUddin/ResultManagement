@using ResultManagement.Models
@model IEnumerable<ResultManagement.Models.Course>

@{
    ViewBag.Title = "EnteredResults";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    TeacherInfo teacher = ViewBag.teacher;
}


@using (Html.BeginForm("EnteredResults", "Teacher", FormMethod.Post))
{
    <fieldset>
        @Html.AntiForgeryToken()

        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 br">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="@Url.Content(teacher.ImagePath)">
                        <span>@teacher.Teacher_Name</span>
                        <span class="text-black-50">@teacher.Teacher_Email</span>
                        <span class="text-black-50">@teacher.Teacher_Contact</span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Show Results</h4>
                        </div>
                        <table class="table table-bordered d-grid">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CoursePoint)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseSemester)
                                </th>
                                <th>
                                    Buttons
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CoursePoint)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseSemester)
                                    </td>
                                    <td>
                                        <button class="btn btn-outline-secondary btn_page">@Html.ActionLink("Show Results", "ShowResult", new { id = item.CourseId })</button>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}

@using ResultManagement.Models
@model ResultManagement.Models.StudentInfo

@{
    ViewBag.Title = "EditStudentDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string message = ViewBag.message;
}


@using (Html.BeginForm("EditStudentDetails", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="box">
                    <div id="overlay">
                        <!--<div class="trick">
                        <center>-->@*<img class="rounded-circle image" width="150px" src="@Url.Content(Model.ImagePath)">*@<!--</center>
                        </div>-->
                        
                        <br />
                        <br />
                        <br />
                        <h2 class="text-center">Updating Student's Informations</h2>
                        <br />
                        <table class="table table-borderless">
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Name)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Name)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Name)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Email)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Email)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Email)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Birth_Date)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Birth_Date)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Birth_Date)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Contact)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Contact)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Contact)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Address)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Address)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Address)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Father_Name)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Father_Name)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Father_Name)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Father_Contact)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Father_Contact)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Father_Contact)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Mother_Name)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Mother_Name)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Mother_Name)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Mother_Contact)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Mother_Contact)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Mother_Contact)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Student_Semester)</td>
                                <td>@Html.TextBoxFor(model => model.Student_Semester)</td>
                                <td>@Html.ValidationMessageFor(model => model.Student_Semester)</td>
                            </tr>
                        </table>
                        @Html.ValidationSummary(true, @message, new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Student_Id)
                        <p class="text-center">
                            <button type="submit" value="Update" class="btn btn-outline-secondary btn_page">Update Details</button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}


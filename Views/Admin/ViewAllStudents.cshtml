@using ResultManagement.Models

@{
    ViewBag.Title = "ViewAllStudents";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<StudentInfo> students = ViewBag.Students;
}

<center><h1>All Students</h1></center>

@using (Html.BeginForm("ViewAllStudents", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @*<div class="col-md-10 col-sm-10">
        <div class="input-group">
            <input class="inputsearch" type="text" id="search" name="search" placeholder="Enter a Student name">
            <button type="button" id="searchfabutton" class="btnforSeach"><i class="fa fa-search"></i></button>
        </div>
    </div>*@
    <br/>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Registration</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Semester No</th>
                <th>Buttons</th>
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var student in students)
            {
                <tr>
                    <td>@student.Student_Name</td>
                    <td>@student.Student_Reg</td>
                    <td>@student.Student_Email</td>
                    <td>@student.Student_Contact</td>
                    <td>@student.Student_Address</td>
                    <td>@student.Student_Semester</td>
                    <td><button class="btn btn-outline-secondary btn_page">@Html.ActionLink("Details", "StudentDetails", new { id = @student.Student_Id })</button></td>
                </tr>
            }
        </tbody>
    </table>
}


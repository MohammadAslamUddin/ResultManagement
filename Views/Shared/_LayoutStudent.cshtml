@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/FontAwesome")
</head>
<body class="bdystu">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bgstu">
        <div class="container container-fluid">
            <a href="/Student/Index"><img src="/Image/ustc-0.png" width="100px"/></a>
            @Html.ActionLink("Student", "Index", "Student", new {area = ""}, new {@class = "navbar-brand"})
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/Student/Index">Home</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" href="/Student/UpdatePassword">Change Password</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>*@
                </ul>
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="btn btnn" role="button" aria-disabled="true"><a href="/Student/Index">Dear - @User.Identity.Name</a></li>
                        <li class="btn btnn" role="button" aria-disabled="true">@Html.ActionLink("LogOut", "signout", "Account")</li>
                    }
                    else
                    {
                        <li class="btn btnn" role="button" aria-disabled="true">@Html.ActionLink("LogIn", "SignIn", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content upper-bodyy">
        @RenderBody()
        <div class="text-center fixed-bottom">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Result Management System of USTC</p>
            </footer>
        </div>
    </div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/scripts/core")
@Scripts.Render("~/bundles/jqueryval")
@RenderSection("scripts", required: false)
</body>
</html>
@model IEnumerable<ResultManagement.Models.SemesterResult>

@{
    ViewBag.Title = "Semester";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>Semester</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        @Html.AntiForgeryToken()
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ct1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ct2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ct3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Part_A)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Part_B)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade_Point)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latter_Grade)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ct1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ct2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ct3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Part_A)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Part_B)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade_Point)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latter_Grade)
                </td>
            </tr>
        }
    </table>

    <table class="table table-bordered">
        <tr>
            <td>Final CGPA</td>
            <td>@ViewBag.CGPA</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.ActionLink("Download Result", "ConvertToPdf", new { semesterNo = @ViewBag.Semester })</td>
        </tr>
    </table>

}
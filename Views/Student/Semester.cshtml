@model IEnumerable<ResultManagement.Models.SemesterResult>

@{
    ViewBag.Title = "Semester";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-center">Student's Result</h4>
                        </div>
                        <table class="table table-bordered table-responsive">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Course_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Course_Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CT_1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CT_2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CT_3)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Attendance)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Part_A)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Part_B)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Grade_Point)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Latter_Grade)
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Course_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Course_Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CT_1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CT_2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CT_3)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Attendance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Part_A)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Part_B)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Grade_Point)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Latter_Grade)
                                    </td>
                                </tr>
                            }
                        </table>

                        <table class="table table-bordered table-responsive">
                            <tr>
                                <td>Final CGPA</td>
                                <td>@ViewBag.CGPA</td>
                            </tr>
                        </table>
                        <center><div class="btn btn-outline-secondary btn_page">@Html.ActionLink("Download Result", "ConvertToPdf", new { semesterNo = @ViewBag.Semester })</div>
                        </center>
                        </div>
                </div>
            </div>
        </div>
    </fieldset>
}

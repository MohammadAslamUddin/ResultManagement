@using ResultManagement.Models
@model ResultManagement.Models.UpdateImage

@{
    ViewBag.Title = "UpdateImage";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    StudentInfo student = ViewBag.Student;
    string message = ViewBag.Message;
}


@using (Html.BeginForm("UpdateImage", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 br">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="@Url.Content(student.ImagePath)">
                        <span class="font-weight-bold">@student.Student_Name</span>
                        <span class="text-black-50">@student.Student_Email</span>
                        <span class="text-black-50">@student.Student_Contact</span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-center">Student's Image Update</h4>
                        </div>
                        @Html.HiddenFor(model => model.Id)
                        <table class="table table-borderless table-responsive d-grid">
                            <tr class="">
                                <td>@Html.LabelFor(model => model.ImageFile)</td>
                                <td><input type="file" name="ImageFile" id="ImageFile" required /></td>
                                <td>@Html.ValidationMessageFor(model => model.ImageFile)</td>
                            </tr>
                            <tr class="text-center">
                                <td colspan="2"><input type="submit" value="Update Image" class="btn btn-outline-secondary btn_page" /></td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-center"><label>@message</label></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}

@using System.Web.Mvc.Html
@using ResultManagement.Models
@model ResultManagement.Models.StudentInfo
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";

}

<h2>Student</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <img src="@Url.Content(Model.ImagePath)" class="rounded mx-auto d-block circular_image" />
    <table class="table table-bordered table-responsive table-active table-striped table-hover">
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Name)</td>
                <td>@Html.DisplayFor(d => d.Student_Name)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Reg)</td>
                <td>@Html.DisplayFor(d => d.Student_Reg)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Department_Name)</td>
                <td>@Html.DisplayFor(d => d.Department_Name)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Email)</td>
                <td>@Html.DisplayFor(d => d.Student_Email)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Contact)</td>
                <td>@Html.DisplayFor(d => d.Student_Contact)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Address)</td>
                <td>@Html.DisplayFor(d => d.Student_Address)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Birth_Date)</td>
                <td>@Html.DisplayFor(d => d.Student_Birth_Date)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Father_Name)</td>
                <td>@Html.DisplayFor(d => d.Student_Father_Name)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Father_Contact)</td>
                <td>@Html.DisplayFor(d => d.Student_Father_Contact)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Mother_Name)</td>
                <td>@Html.DisplayFor(d => d.Student_Mother_Name)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Student_Mother_Contact)</td>
                <td>@Html.DisplayFor(d => d.Student_Mother_Contact)</td>
            </tr>
        </tbody>
    </table>
    <center>
        <button class="btn btn-outline-secondary btn_page" value="Update Password">@Html.ActionLink("Change Password", "UpdatePassword", new { id = Model.Student_Id, email = Model.Student_Email })</button>
        <button class="btn btn-outline-secondary btn_page" value="Update Image">@Html.ActionLink("Change Image", "UpdateImage", new { id = Model.Student_Id })</button>
        <button class="btn btn-outline-secondary btn_page" value="Show Result">@Html.ActionLink("Show Result", "GetResult", new { id = Model.Student_Id })</button>
    </center>
}
